<div class="container">
  <div class="row">
    <div class="col">


      <div class="card-columns">
        {{#each items as |item|}}
          <a href="/items/{{item.id}}">
            <div class="card">
              <img src="data:{{item.img.contentType}};base64,{{item.img.data}}" class="card-img-top" alt="">
              <div class="card-body">
                <h5 class="card-title">{{item.name}}</h5>
                <p class="card-text">{{item.description}}</p>
              </div>
            </div>
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
